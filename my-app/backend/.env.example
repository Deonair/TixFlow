# Server
PORT=5050
NODE_ENV=production

# Database
MONGO_URI=mongodb://localhost:27017/tixflow
SESSION_SECRET=please-change-in-production
COOKIE_SAMESITE=lax # opties: lax | strict | none
COOKIE_SECURE=auto  # opties: true | false | auto
USE_IN_MEMORY_MONGO=false # zet true voor lokale dev zonder externe MongoDB

# App base URL (voor redirects en ticket links)
APP_BASE_URL=https://tixflow.nl

# E-mail (Resend)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=tickets@send.tixflow.nl

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret
